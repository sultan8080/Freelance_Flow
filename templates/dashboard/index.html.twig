{% extends 'base.html.twig' %}

{% block title %}Dashboard - Freelance Flow{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 p-8">
    <div class="max-w-4xl mx-auto">
        
        {# Your User Status Bar #}
        {% if app.user %}
            <div class="bg-white border-l-4 border-indigo-500 p-4 mb-8 shadow-sm rounded-r-lg flex justify-between items-center">
                <div class="text-sm text-gray-700">
                    Logged in as: <span class="font-bold text-indigo-600">{{ app.user.userIdentifier }}</span>
                </div>
                <a href="{{ path('app_logout') }}" class="text-sm font-semibold text-red-600 hover:text-red-800 transition-colors">
                    Sign out
                </a>
            </div>
        {% endif %}

        {# Dashboard Content #}
        <div class="bg-white rounded-xl shadow-md p-8">
            <h1 class="text-2xl font-bold text-gray-900 mb-4">Welcome to your Dashboard! ðŸš€</h1>
            <p class="text-gray-600 italic">
                This is the heart of Freelance Flow. Soon, you will be able to manage your clients and track your invoices here.
            </p>
            
            <div class="mt-10 grid grid-cols-1 md:grid-cols-2 gap-6">
                <div class="border-2 border-dashed border-gray-200 rounded-lg p-6 text-center">
                    <p class="text-gray-400">Total Invoiced: $0.00</p>
                </div>
                <div class="border-2 border-dashed border-gray-200 rounded-lg p-6 text-center">
                    <p class="text-gray-400">Total Clients: 0</p>
                </div>
            </div>
        </div>

    </div>
</div>
{% endblock %}
