{% extends 'dashboard/base.html.twig' %}

{% block title %}Dashboard Overview
{% endblock %}

{% block dashboard_content %}
	<div
		class="space-y-8 mb-10">

		{# --- 1. Header (Matched to Analytics style) --- #}
		<div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
			<div>
				<h1 class="text-3xl font-extrabold text-slate-900 tracking-tight">Dashboard</h1>
				<p class="text-slate-500 mt-1">
					Overview for
					<span class="font-semibold text-primary">{{ now|date('F Y') }}</span>
				</p>
			</div>

			<div class="flex items-center gap-3">
				<a href="{{ path('app_client_new') }}" class="bg-primary text-white px-5 py-2.5 rounded-2xl text-sm font-semibold hover:bg-primary-hover shadow-indigo-glow transition-all hover:-translate-y-0.5">
					<i class="fas fa-plus mr-2"></i>
					Add Client
				</a>
				<a href="{{ path('app_invoice_new') }}" class="bg-white border border-slate-200 text-slate-700 px-5 py-2.5 rounded-2xl text-sm font-semibold hover:bg-slate-50 transition-all shadow-sm">
					<i class="fas fa-file-invoice mr-2"></i>
					New Invoice
				</a>
			</div>
		</div>

		{# --- 2. KPI Cards (Matched to Analytics Bento style) --- #}
		<div
			class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">

			{# Card 1: Revenue #}
			<div class="glass-card p-6 rounded-bento hover:shadow-xl hover:-translate-y-1 transition-all group border-white/60">
				<div class="flex items-center gap-4 mb-4">
					<div class="w-12 h-12 rounded-xl bg-indigo-50 flex items-center justify-center text-indigo-600 group-hover:bg-indigo-600 group-hover:text-white transition-colors">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
					</div>
					<div>
						<p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Revenue ({{ now|date('M') }})</p>
						<h3 class="text-2xl font-bold text-slate-900 tracking-tight">{{ monthly_revenue|number_format(0, '.', ' ') }}
							€</h3>
					</div>
				</div>
				<p class="text-emerald-600 text-xs font-medium flex items-center gap-1">
					<span class="w-2 h-2 rounded-full bg-emerald-500 animate-pulse"></span>
					Current Month
				</p>
			</div>

			{# Card 2: Pending #}
			<div class="glass-card p-6 rounded-bento hover:shadow-xl hover:-translate-y-1 transition-all group border-white/60">
				<div class="flex items-center gap-4 mb-4">
					<div class="w-12 h-12 rounded-xl bg-blue-50 flex items-center justify-center text-blue-600 group-hover:bg-blue-600 group-hover:text-white transition-colors">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/></svg>
					</div>
					<div>
						<p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Pending Payment</p>
						<h3 class="text-2xl font-bold text-slate-900 tracking-tight">{{ counts.sent }}</h3>
					</div>
				</div>
				<p class="text-slate-500 text-xs">Waiting for cash</p>
			</div>

			{# Card 3: Drafts #}
			<a href="{{ path('app_invoice_index', {status: 'DRAFT'}) }}" class="glass-card p-6 rounded-bento hover:shadow-xl hover:-translate-y-1 transition-all group border-white/60 block">
				<div class="flex items-center gap-4 mb-4">
					<div class="w-12 h-12 rounded-xl bg-amber-50 flex items-center justify-center text-amber-600 group-hover:bg-amber-600 group-hover:text-white transition-colors">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/></svg>
					</div>
					<div>
						<p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Drafts</p>
						<h3 class="text-2xl font-bold text-slate-900 tracking-tight">{{ counts.draft }}</h3>
					</div>
				</div>
				<p class="text-slate-500 text-xs group-hover:text-primary transition-colors">Click to finish editing</p>
			</a>

			{# Card 4: Clients #}
			<div class="glass-card p-6 rounded-bento hover:shadow-xl hover:-translate-y-1 transition-all group border-white/60">
				<div class="flex items-center gap-4 mb-4">
					<div class="w-12 h-12 rounded-xl bg-purple-50 flex items-center justify-center text-purple-600 group-hover:bg-purple-600 group-hover:text-white transition-colors">
						<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0z"/></svg>
					</div>
					<div>
						<p class="text-xs font-bold text-slate-400 uppercase tracking-wider">Total Clients</p>
						<h3 class="text-2xl font-bold text-slate-900 tracking-tight">{{ clients.total }}</h3>
					</div>
				</div>
				{% if clients.new_this_month > 0 %}
					<p class="text-purple-600 text-xs font-bold">+{{ clients.new_this_month }}
						new this month</p>
				{% else %}
					<p class="text-slate-400 text-xs italic">Steady growth</p>
				{% endif %}
			</div>
		</div>

		{# --- 3. Recent Activity Table (Matched to Analytics Pending style) --- #}
		<div class="glass-card rounded-[2.5rem] p-8 shadow-sm border-slate-200/50">
			<div class="flex items-center justify-between mb-6">
				<div class="flex items-center gap-4">
					<div class="w-2 h-8 bg-indigo-600 rounded-full"></div>
					<h2 class="text-xl font-bold text-slate-900">Recent Invoices</h2>
				</div>
				<a href="{{ path('app_invoice_index') }}" class="text-sm font-semibold text-primary hover:text-primary-hover transition-colors">
					View All
					<i class="fas fa-arrow-right ml-1 text-xs"></i>
				</a>
			</div>

			<div class="overflow-x-auto">
				<table class="w-full text-left text-sm text-slate-500">
					<thead class="uppercase text-xs text-slate-400 bg-slate-50/50 border-b border-slate-100">
						<tr>
							<th class="py-4 pl-6 rounded-tl-2xl font-bold">Client</th>
							<th class="py-4 font-bold">Invoice #</th>
							<th class="py-4 font-bold">Date</th>
							<th class="py-4 font-bold">Amount (HT)</th>
							<th class="py-4 text-right pr-6 rounded-tr-2xl font-bold">Status</th>
						</tr>
					</thead>
					<tbody class="divide-y divide-slate-100">
						{% for invoice in recent_invoices %}
							<tr class="hover:bg-slate-50/80 transition group">
								<td class="py-4 pl-6 font-semibold text-slate-700">
									{{ invoice.client.companyName ?: invoice.client.fullName }}
								</td>
								<td class="py-4">
									<a href="{{ path('app_invoice_show', {id: invoice.id}) }}" class="text-primary font-medium hover:underline">
										{{ invoice.invoiceNumber }}
									</a>
								</td>
								<td class="py-4 text-slate-500">
									{{ invoice.createdAt|date('d M Y') }}
								</td>
								<td class="py-4 font-medium text-slate-700">
									{{ invoice.totalHt|number_format(2, '.', ' ') }}
									€
								</td>
								<td class="py-4 text-right pr-6">
									{% set statusClasses = {
                                        'PAID': 'bg-emerald-50 text-emerald-600 border-emerald-100',
                                        'SENT': 'bg-blue-50 text-blue-600 border-blue-100',
                                        'DRAFT': 'bg-amber-50 text-amber-600 border-amber-100'
                                    } %}
									<span class="px-3 py-1.5 rounded-xl text-xs font-bold border {{ statusClasses[invoice.status] ?? 'bg-slate-50 text-slate-600' }}">
										{{ invoice.status }}
									</span>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5" class="py-12 text-center">
									<p class="text-slate-400 italic">No recent activity found.</p>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>

	</div>
{% endblock %}
