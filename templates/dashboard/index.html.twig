{% extends 'dashboard/base.html.twig' %}

{% block title %}Dashboard Overview
{% endblock %}

{% block dashboard_content %}
	<div
		class="space-y-8 mb-10">

		{# --- 1. Header (Blue/Purple Theme) --- #}
		<div class="flex flex-col md:flex-row justify-between items-start md:items-center gap-6">
			<div>
				<h1 class="text-3xl font-extrabold text-white tracking-tight">Dashboard</h1>
				<p class="text-slate-400 mt-1">
					Overview for
					<span class="font-bold bg-gradient-to-r from-blue-400 to-purple-400 bg-clip-text text-transparent">
						{{ "now"|date('F Y') }}
					</span>
				</p>
			</div>

			<div class="flex items-center gap-3">
				<a href="{{ path('app_invoice_new') }}" class="group flex items-center gap-2 px-5 py-2.5 rounded-xl border border-white/10 bg-white/5 hover:bg-white/10 text-slate-300 hover:text-white transition-all shadow-lg backdrop-blur-md">
					<i class="fas fa-file-invoice text-slate-400 group-hover:text-blue-400 transition-colors"></i>
					<span class="font-medium text-sm">New Invoice</span>
				</a>

				<a href="{{ path('app_client_new') }}" class="group relative px-5 py-2.5 rounded-xl overflow-hidden shadow-lg shadow-blue-500/20 transition-all hover:scale-105">
					<div class="absolute inset-0 w-full h-full bg-gradient-to-r from-blue-600 to-purple-700 opacity-90 group-hover:opacity-100 transition-opacity"></div>
					<div class="absolute top-0 -left-full w-full h-full bg-gradient-to-r from-transparent via-white/20 to-transparent group-hover:animate-shimmer"></div>
					<span class="relative flex items-center gap-2 text-sm font-semibold text-white">
						<i class="fas fa-plus"></i>
						Add Client
					</span>
				</a>
			</div>
		</div>

		{# --- 2. KPI Cards (Dark Glass Bento Grid) --- #}
		<div
			class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">

			{# Card 1: Revenue (Purple Theme) #}
			<div class="glass-card p-6 hover:border-purple-500/30 transition-all group">
				<div class="flex items-center gap-4 mb-4">
					<div class="w-12 h-12 rounded-xl bg-purple-500/10 border border-purple-500/20 flex items-center justify-center text-purple-400 group-hover:bg-purple-500 group-hover:text-white transition-all shadow-[0_0_15px_rgba(168,85,247,0.15)]">
						<i class="fa-solid fa-euro-sign text-lg"></i>
					</div>
					<div>
						<p class="text-[10px] font-bold text-slate-500 uppercase tracking-wider">Revenue ({{ "now"|date('M') }})</p>
						<h3 class="text-2xl font-bold text-white tracking-tight">{{ monthly_revenue|number_format(0, '.', ' ') }}
							€</h3>
					</div>
				</div>
				<p class="text-emerald-400 text-xs font-medium flex items-center gap-1.5">
					<span class="relative flex h-2 w-2">
						<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-emerald-400 opacity-75"></span>
						<span class="relative inline-flex rounded-full h-2 w-2 bg-emerald-500"></span>
					</span>
					Current Month
				</p>
			</div>

			{# Card 2: Pending (Blue Theme) #}
			<div class="glass-card p-6 hover:border-blue-500/30 transition-all group">
				<div class="flex items-center gap-4 mb-4">
					<div class="w-12 h-12 rounded-xl bg-blue-500/10 border border-blue-500/20 flex items-center justify-center text-blue-400 group-hover:bg-blue-500 group-hover:text-white transition-all shadow-[0_0_15px_rgba(59,130,246,0.15)]">
						<i class="fa-solid fa-hourglass-half text-lg"></i>
					</div>
					<div>
						<p class="text-[10px] font-bold text-slate-500 uppercase tracking-wider">Pending</p>
						<h3 class="text-2xl font-bold text-white tracking-tight">{{ counts.sent }}</h3>
					</div>
				</div>
				<p class="text-slate-400 text-xs">Waiting for payment</p>
			</div>

			{# Card 3: Drafts (Amber Theme) #}
			<a href="{{ path('app_invoice_index', {status: 'DRAFT'}) }}" class="glass-card p-6 hover:border-amber-500/30 transition-all group block relative overflow-hidden">
				<div class="absolute -right-10 -top-10 w-24 h-24 bg-amber-500/10 blur-2xl rounded-full opacity-0 group-hover:opacity-100 transition-opacity"></div>

				<div class="flex items-center gap-4 mb-4 relative z-10">
					<div class="w-12 h-12 rounded-xl bg-amber-500/10 border border-amber-500/20 flex items-center justify-center text-amber-400 group-hover:bg-amber-500 group-hover:text-white transition-all shadow-[0_0_15px_rgba(245,158,11,0.15)]">
						<i class="fa-solid fa-pen-ruler text-lg"></i>
					</div>
					<div>
						<p class="text-[10px] font-bold text-slate-500 uppercase tracking-wider">Drafts</p>
						<h3 class="text-2xl font-bold text-white tracking-tight">{{ counts.draft }}</h3>
					</div>
				</div>
				<p class="text-slate-500 text-xs group-hover:text-amber-400 transition-colors relative z-10">Click to finish editing</p>
			</a>

			{# Card 4: Clients (Blue/Purple Blend) #}
			<div class="glass-card p-6 hover:border-indigo-500/30 transition-all group">
				<div class="flex items-center gap-4 mb-4">
					<div class="w-12 h-12 rounded-xl bg-indigo-500/10 border border-indigo-500/20 flex items-center justify-center text-indigo-400 group-hover:bg-indigo-500 group-hover:text-white transition-all shadow-[0_0_15px_rgba(99,102,241,0.15)]">
						<i class="fa-solid fa-users text-lg"></i>
					</div>
					<div>
						<p class="text-[10px] font-bold text-slate-500 uppercase tracking-wider">Total Clients</p>
						<h3 class="text-2xl font-bold text-white tracking-tight">{{ clients.total }}</h3>
					</div>
				</div>
				{% if clients.new_this_month > 0 %}
					<p class="text-indigo-400 text-xs font-bold">+{{ clients.new_this_month }}
						new this month</p>
				{% else %}
					<p class="text-slate-500 text-xs italic">Steady relationship</p>
				{% endif %}
			</div>
		</div>

		{# --- 3. Recent Activity Table (Dark Glass) --- #}
		<div class="glass-card rounded-2xl p-6 sm:p-8">
			<div class="flex items-center justify-between mb-6">
				<div class="flex items-center gap-4">
					<div class="w-1.5 h-6 bg-gradient-to-b from-blue-500 to-purple-500 rounded-full"></div>
					<h2 class="text-lg font-bold text-white">Recent Invoices</h2>
				</div>
				<a href="{{ path('app_invoice_index') }}" class="text-sm font-semibold text-blue-400 hover:text-blue-300 transition-colors flex items-center gap-1 group">
					View All
					<i class="fas fa-arrow-right text-xs group-hover:translate-x-1 transition-transform"></i>
				</a>
			</div>

			<div class="overflow-x-auto">
				<table class="w-full text-left text-sm text-slate-400">
					<thead class="uppercase text-xs text-slate-500 border-b border-white/5">
						<tr>
							<th class="py-4 pl-4 font-bold tracking-wider">Client</th>
							<th class="py-4 font-bold tracking-wider">Invoice #</th>
							<th class="py-4 font-bold tracking-wider">Date</th>
							<th class="py-4 font-bold tracking-wider">Amount (HT)</th>
							<th class="py-4 text-right pr-4 font-bold tracking-wider">Status</th>
						</tr>
					</thead>
					<tbody class="divide-y divide-white/5">
						{% for invoice in recent_invoices %}
							<tr class="hover:bg-white/5 transition-colors group">
								<td class="py-4 pl-4 font-medium text-slate-200 group-hover:text-white transition-colors">
									{{ invoice.client.companyName ?: invoice.client.fullName }}
								</td>

								<td class="py-4">

									{% if invoice.invoiceNumber %}
										<a href="{{ path('app_invoice_show', {id: invoice.id}) }}" class="text-purple-400 hover:text-purple-600 font-medium hover:underline">
											{{ invoice.invoiceNumber }}
										</a>
									{% else %}
										<a href="{{ path('app_invoice_show', {id: invoice.id}) }}" class="text-blue-400 hover:text-blue-600 font-medium hover:underline">
											DRAFT - {{ invoice.id }}
										</a>
									{% endif %}
								</td>
								<td class="py-4 text-slate-500">
									{{ invoice.createdAt|date('d M Y') }}
								</td>
								<td class="py-4 font-medium text-white">
									{{ invoice.totalHt|number_format(2, '.', ' ') }}
									€
								</td>
								<td class="py-4 text-right pr-4">
									{% set statusClasses = {
                                        'PAID': 'bg-emerald-500/10 text-emerald-400 border-emerald-500/20',
                                        'SENT': 'bg-blue-500/10 text-blue-400 border-blue-500/20',
                                        'DRAFT': 'bg-amber-500/10 text-amber-400 border-amber-500/20'
                                    } %}
									<span class="px-3 py-1 rounded-full text-[10px] font-bold border uppercase tracking-wider shadow-sm {{ statusClasses[invoice.status] ?? 'bg-slate-500/10 text-slate-400 border-slate-500/20' }}">
										{{ invoice.status }}
									</span>
								</td>
							</tr>
						{% else %}
							<tr>
								<td colspan="5" class="py-12 text-center">
									<div class="flex flex-col items-center justify-center gap-3">
										<div class="w-12 h-12 rounded-full bg-slate-800/50 flex items-center justify-center text-slate-600">
											<i class="fa-solid fa-inbox text-xl"></i>
										</div>
										<p class="text-slate-500 italic">No recent activity found.</p>
									</div>
								</td>
							</tr>
						{% endfor %}
					</tbody>
				</table>
			</div>
		</div>

	</div>
{% endblock %}
