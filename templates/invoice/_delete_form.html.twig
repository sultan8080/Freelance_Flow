<form method="post" action="{{ path('app_invoice_delete', {'id': invoice.id}) }}" onsubmit="return confirm('{{ 'Are you sure you want to delete this invoice draft?'|trans }}');" class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ invoice.id) }}">

    <button class="flex items-center gap-2 px-5 py-2.5 text-sm font-bold text-red-400 bg-red-500/10 border border-red-500/20 rounded-xl hover:bg-red-500/20 hover:text-red-300 hover:border-red-500/30 transition-all shadow-lg shadow-red-900/10">
        <i class="fas fa-trash-alt text-xs opacity-70"></i>
        {{ 'Delete'|trans }}
    </button>
</form>