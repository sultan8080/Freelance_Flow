{% extends 'base.html.twig' %}

{% block title %}
	{{ 'login.page_title'|trans }}
{% endblock %}

{% block body %}

	<div id="flex items-center gap-6">
		{% include 'home/homeNavbar.html.twig' %}
	</div>

	<div class="min-h-screen flex items-center justify-center px-4 py-12 relative pt-26 md:pt-30 z-10">

		<div class="glass-card w-full max-w-lg p-8 sm:p-10 relative">

			<div class="text-center mb-8">
				<div class="mx-auto w-12 h-12 rounded-xl bg-gradient-to-br from-blue-600 to-purple-700 flex items-center justify-center shadow-[0_0_20px_rgba(124,58,237,0.4)] mb-5 relative overflow-hidden group">
					<div class="absolute top-0 -left-full w-full h-full bg-gradient-to-r from-transparent via-white/30 to-transparent group-hover:animate-shimmer"></div>
					<i class="fa-brands fa-slack text-white font-bold relative z-10 text-xl"></i>
				</div>
				<h2 class="text-3xl font-bold mb-2 tracking-tight mt-2">{{ 'login.welcome_back'|trans }}</h2>
				<p class="text-slate-400 text-sm">{{ 'login.subtitle'|trans }}</p>
			</div>
		
			
			{% if app.user %}
				<div class="bg-blue-500/10 border border-blue-500/20 rounded-lg p-4 mb-6 text-sm text-blue-300 text-center">
					{{ 'login.logged_in_as'|trans }}
					<span class="font-bold text-white">{{ app.user.userIdentifier }}</span>.
					<a href="{{ path('app_logout') }}" class="underline hover:text-white ml-1 transition-colors">{{ 'action.sign_out'|trans }}</a>
				</div>
			{% endif %}


			<div id="flash-messages" class="mb-6">
				{% include '_partials/_flash_messages.html.twig' %}
			</div>

			{# --- SIGN IN FORM --- #}

			<form method="post" class="space-y-6">
				<div id="flash-messages" class="mb-6">
					{% include '_partials/_flash_messages.html.twig' %}
				</div>

				{% if error %}
					<div class="bg-red-500/10 border border-red-500/20 rounded-lg p-4 text-sm text-red-300 flex items-start text-center gap-3">
						<i class="fa-solid fa-circle-exclamation mt-0.5"></i>
						<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
					</div>
				{% endif %}

				<div>
					<label for="inputEmail" class="block text-sm font-medium text-slate-300 mb-1.5">{{ 'login.email_label'|trans }}</label>
					<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="input-glass" autocomplete="email" required autofocus placeholder="{{ 'login.email_placeholder'|trans }}">
				</div>

				<div>
					<div class="flex items-center justify-between mb-1.5">
						<label for="inputPassword" class="block text-sm font-medium text-slate-300">{{ 'login.password_label'|trans }}</label>
						<a href="#" class="text-xs text-blue-400 hover:text-blue-300 transition-colors">{{ 'login.forgot_password'|trans }}</a>
					</div>
					<input type="password" name="password" id="inputPassword" class="input-glass" autocomplete="current-password" required placeholder="••••••••">
				</div>

				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				<div class="flex items-center">
					<input id="remember_me" name="_remember_me" type="checkbox" class="h-4 w-4 rounded border-white/10 bg-white/5 text-blue-600 focus:ring-blue-500 focus:ring-offset-slate-900 transition cursor-pointer">
					<label for="remember_me" class="ml-2 block text-sm text-slate-400 cursor-pointer select-none">{{ 'login.remember_me'|trans }}</label>
				</div>

				<button type="submit" class="group relative w-full flex justify-center py-3 px-4 rounded-lg overflow-hidden transition-all duration-300 shadow-lg shadow-blue-600/20 hover:scale-[1.02] focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 focus:ring-offset-slate-900">
					<div class="absolute inset-0 w-full h-full bg-gradient-to-r from-blue-600 to-purple-700 opacity-90 group-hover:opacity-100 transition-opacity"></div>
					<div class="absolute top-0 -left-full w-full h-full bg-gradient-to-r from-transparent via-white/20 to-transparent group-hover:animate-shimmer"></div>
					<span class="relative text-sm font-semibold text-white">{{ 'action.sign_in'|trans }}</span>
				</button>

				<div class="relative py-2">
					<div class="absolute inset-0 flex items-center" aria-hidden="true">
						<div class="w-full border-t border-slate-600/30"></div>
					</div>
					<div class="relative flex justify-center">
						<span class="px-2 text-xs uppercase text-slate-500 bg-slate-900/50 backdrop-blur-md rounded">{{ 'Or try instantly'|trans }}
						</span>
					</div>
				</div>


				<div class="text-center mt-6">
					<p class="text-sm text-slate-400">
						{{ 'login.no_account'|trans }}
						<a href="{{ path('app_register') }}" class="text-blue-400 hover:text-blue-300 font-medium transition-colors">{{ 'action.create_account'|trans }}</a>
					</p>
				</div>
			</form>
		</div>
	</div>
{% endblock %}
